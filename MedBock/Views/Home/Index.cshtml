@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MedBook - Medical Appointment Booking Platform</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">
</head>
<body>
    <!-- Header Section -->
    <header class="header">
        <nav class="navbar">
            <div class="nav-container">
                <div class="nav-logo">
                    <i class="fas fa-heartbeat"></i>
                    <span>MedBook</span>
                </div>



                <div class="nav-auth">
                    @if (User.Identity.IsAuthenticated)
                    {   
                        <form asp-controller="Account" asp-action="Login" id="logoutForm">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="auth-btn patient-login">
                                <i class="fas fa-sign-out-alt">
                                    Logout
                                </i>
                            </button>
                        </form>
                    }
                    else
                    {
                        <button class="auth-btn patient-login" onclick="openModel('PatientLoginFormModel')">
                            <i class="fas fa-user"></i>
                            Patient Login
                            </button>
                    }
                    
                </div>

                <div class="hamburger">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </div>
            </div>
        </nav>
    </header>

    <!-- Hero Banner Section -->
    <section id="home" class="hero">
        <div class="hero-container">
            <div class="hero-content" data-aos="fade-up">
                <h1 class="hero-title">
                    Your Health, Our Priority
                    <span class="highlight">Professional Medical Care</span>
                    <span class="hero-subtitle">When You Need It Most</span>
                </h1>
                <p class="hero-description">
                    Connect with top healthcare professionals in your area.
                    Book appointments instantly, manage your health records,
                    and get the care you deserve.
                </p>
                <div class="hero-actions">
                    <button class="cta-btn primary" onclick="scrollToSection('disciplines')">
                        <i class="fas fa-search"></i>
                        Find a Doctor
                    </button>
                    <button class="cta-btn secondary" onclick="window.location.href='register.html'">
                        <i class="fas fa-user-plus"></i>
                        Get Started
                    </button>
                </div>
                <div class="hero-stats">
                    <div class="stat-item">
                        <span class="stat-number">500+</span>
                        <span class="stat-label">Doctors</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">15+</span>
                        <span class="stat-label">Specialties</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">24/7</span>
                        <span class="stat-label">Support</span>
                    </div>
                </div>
            </div>
            <div class="hero-visual" data-aos="fade-left">
                <div class="hero-image-container">
                    <div class="hero-image-main">
                        <img src="https://img.freepik.com/free-vector/doctor-examining-patient-illustration_23-2148856559.jpg" alt="Medical Appointment">
                    </div>
                </div>
            </div>
        </div>
        <div class="hero-wave">
            <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
                <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".15" fill="#10b981"></path>
                <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.46,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".25" fill="#0ea5e9"></path>
                <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" fill="#1e40af"></path>
            </svg>
        </div>
    </section>

    <!-- Medical Disciplines Section -->
    <section id="disciplines" class="disciplines">
        <div class="container">
            <div class="section-header" data-aos="fade-up">
                <h2>Browse by Medical Discipline</h2>
                <p>Choose from our wide range of medical specialties</p>
            </div>

            <div class="disciplines-grid">
                <div class="discipline-card" data-aos="zoom-in" data-aos-delay="100" onclick="selectDiscipline('internal')">
                    <div class="discipline-icon">
                        <i class="fas fa-stethoscope"></i>
                    </div>
                    <h3>Internal Medicine</h3>
                    <p>General health and wellness</p>
                </div>

                <div class="discipline-card" data-aos="zoom-in" data-aos-delay="200" onclick="selectDiscipline('orthopedics')">
                    <div class="discipline-icon">
                        <i class="fas fa-bone"></i>
                    </div>
                    <h3>Orthopedics</h3>
                    <p>Bone and joint care</p>
                </div>

                <div class="discipline-card" data-aos="zoom-in" data-aos-delay="300" onclick="selectDiscipline('pediatrics')">
                    <div class="discipline-icon">
                        <i class="fas fa-baby"></i>
                    </div>
                    <h3>Pediatrics</h3>
                    <p>Children's health care</p>
                </div>

                <div class="discipline-card" data-aos="zoom-in" data-aos-delay="400" onclick="selectDiscipline('cardiology')">
                    <div class="discipline-icon">
                        <i class="fas fa-heart"></i>
                    </div>
                    <h3>Cardiology</h3>
                    <p>Heart and cardiovascular health</p>
                </div>

                <div class="discipline-card" data-aos="zoom-in" data-aos-delay="500" onclick="selectDiscipline('dermatology')">
                    <div class="discipline-icon">
                        <i class="fas fa-allergies"></i>
                    </div>
                    <h3>Dermatology</h3>
                    <p>Skin, hair, and nail care</p>
                </div>

                <div class="discipline-card" data-aos="zoom-in" data-aos-delay="600" onclick="selectDiscipline('neurology')">
                    <div class="discipline-icon">
                        <i class="fas fa-brain"></i>
                    </div>
                    <h3>Neurology</h3>
                    <p>Brain and nervous system</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Booking Process Section -->
    <section class="booking-process">
        <div class="container">
            <div class="section-header" data-aos="fade-up">
                <h2>How It Works</h2>
                <p>Simple steps to book your appointment</p>
            </div>

            <div class="process-steps">
                <div class="step-card" data-aos="fade-up" data-aos-delay="100">
                    <div class="step-number">1</div>
                    <div class="step-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <h3>Choose Discipline</h3>
                    <p>Select your medical specialty from our comprehensive list</p>
                </div>

                <div class="step-card" data-aos="fade-up" data-aos-delay="200">
                    <div class="step-number">2</div>
                    <div class="step-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <h3>Select Doctor & Time</h3>
                    <p>Browse available doctors and choose your preferred time slot</p>
                </div>

                <div class="step-card" data-aos="fade-up" data-aos-delay="300">
                    <div class="step-number">3</div>
                    <div class="step-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h3>Confirm Booking</h3>
                    <p>Review your appointment details and confirm your booking</p>
                </div>

                <div class="step-card" data-aos="fade-up" data-aos-delay="400">
                    <div class="step-number">4</div>
                    <div class="step-icon">
                        <i class="fas fa-stethoscope"></i>
                    </div>
                    <h3>Get Examined</h3>
                    <p>Attend your appointment and receive quality healthcare</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Doctors Section -->
    <section class="featured-doctors">
        <div class="container">
            <div class="section-header" data-aos="fade-up">
                <h2>Our Specialist Physicians</h2>
                <p>Meet our experienced healthcare professionals</p>
            </div>

            <div class="doctors-carousel" data-aos="fade-up">
                <div class="doctor-card">
                    <div class="doctor-image">
                        <img src="https://img.freepik.com/free-photo/doctor-with-his-arms-crossed-white-background_1368-5790.jpg" alt="Dr. Sarah Johnson">
                    </div>
                    <div class="doctor-info">
                        <h3>Dr. Sarah Johnson</h3>
                        <p class="credentials">MD, Internal Medicine</p>
                        <p class="discipline">Internal Medicine</p>
                        <button class="book-btn" onclick="bookDoctor('sarah-johnson')">Book Now</button>
                    </div>
                </div>

                <div class="doctor-card">
                    <div class="doctor-image">
                        <img src="https://img.freepik.com/free-photo/portrait-smiling-male-doctor_171337-1532.jpg" alt="Dr. Michael Chen">
                    </div>
                    <div class="doctor-info">
                        <h3>Dr. Michael Chen</h3>
                        <p class="credentials">MD, Cardiology</p>
                        <p class="discipline">Cardiology</p>
                        <button class="book-btn" onclick="bookDoctor('michael-chen')">Book Now</button>
                    </div>
                </div>

                <div class="doctor-card">
                    <div class="doctor-image">
                        <img src="https://img.freepik.com/free-photo/confident-female-doctor-with-stethoscope_23-2148856558.jpg" alt="Dr. Emily Rodriguez">
                    </div>
                    <div class="doctor-info">
                        <h3>Dr. Emily Rodriguez</h3>
                        <p class="credentials">MD, Pediatrics</p>
                        <p class="discipline">Pediatrics</p>
                        <button class="book-btn" onclick="bookDoctor('emily-rodriguez')">Book Now</button>
                    </div>
                </div>

                <div class="doctor-card">
                    <div class="doctor-image">
                        <img src="https://img.freepik.com/free-photo/doctor-with-stethoscope-hands-hospital-background_1423-1.jpg" alt="Dr. David Kim">
                    </div>
                    <div class="doctor-info">
                        <h3>Dr. David Kim</h3>
                        <p class="credentials">MD, Orthopedics</p>
                        <p class="discipline">Orthopedics</p>
                        <button class="book-btn" onclick="bookDoctor('david-kim')">Book Now</button>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <!-- Admin Notice Section (Hidden by default) -->
    <section id="adminSection" class="admin-section" style="display: none;">
        <div class="container">
            <div class="admin-content" data-aos="fade-up">
                <h2>Admin Dashboard</h2>
                <div class="admin-stats">
                    <div class="stat-item">
                        <i class="fas fa-users"></i>
                        <span class="stat-number">1,247</span>
                        <span class="stat-label">Users</span>
                    </div>
                    <div class="stat-item">
                        <i class="fas fa-stethoscope"></i>
                        <span class="stat-number">12</span>
                        <span class="stat-label">Disciplines</span>
                    </div>
                    <div class="stat-item">
                        <i class="fas fa-microchip"></i>
                        <span class="stat-number">89</span>
                        <span class="stat-label">Devices</span>
                    </div>
                </div>
                <button class="admin-btn" onclick="openAdminDashboard()">
                    <i class="fas fa-cog"></i>
                    Admin Dashboard
                </button>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-column">
                    <div class="footer-logo">
                        <i class="fas fa-heartbeat"></i>
                        <span>MedBook</span>
                    </div>
                    <p>Your trusted partner for online medical appointments. Easy, fast, and reliable healthcare booking platform.</p>
                </div>

                <div class="footer-column">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="#home">Home</a></li>
                        <li><a href="#disciplines">Bookings</a></li>
                        <li><a href="#disciplines">Disciplines</a></li>
                        <li><a href="#about">About Us</a></li>
                    </ul>
                </div>

                <div class="footer-column">
                    <h3>Support</h3>
                    <ul>
                        <li><a href="#contact">Contact</a></li>
                        <li><a href="#faq">FAQ</a></li>
                        <li><a href="#privacy">Privacy Policy</a></li>
                        <li><a href="#terms">Terms of Service</a></li>
                    </ul>
                </div>

                <div class="footer-column">
                    <h3>Contact</h3>
                    <div class="contact-info">
                        <p><i class="fas fa-map-marker-alt"></i> 123 Medical Center Dr, Healthcare City</p>
                        <p><i class="fas fa-phone"></i> +1 (555) 123-4567</p>
                        <p><i class="fas fa-envelope"></i> info@medbook.com</p>
                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2024 MedBook. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Modals -->
    <!-- Patient Login Modal -->
    <div id="patientLoginModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal('patientLoginModal')">&times;</span>
            <div class="modal-header">
                <i class="fas fa-user"></i>
                <h2>Patient Login</h2>
            </div>
            <form class="modal-form">
                <div class="form-group">
                    <label for="patientEmail">Email</label>
                    <input type="email" id="patientEmail" required>
                </div>
                <div class="form-group">
                    <label for="patientPassword">Password</label>
                    <input type="password" id="patientPassword" required>
                </div>
                <button type="submit" class="modal-btn">Login</button>
            </form>
        </div>
    </div>

    <!-- Doctor Login Modal -->
    <div id="doctorLoginModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal('doctorLoginModal')">&times;</span>
            <div class="modal-header">
                <i class="fas fa-user-md"></i>
                <h2>Doctor Login</h2>
            </div>
            <form class="modal-form">
                <div class="form-group">
                    <label for="doctorEmail">Email</label>
                    <input type="email" id="doctorEmail" required>
                </div>
                <div class="form-group">
                    <label for="doctorPassword">Password</label>
                    <input type="password" id="doctorPassword" required>
                </div>
                <button type="submit" class="modal-btn">Login</button>
            </form>
        </div>
    </div>

    <!-- Register Modal -->
    <div id="registerModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal('registerModal')">&times;</span>
            <div class="modal-header">
                <i class="fas fa-user-plus"></i>
                <h2>Create Account</h2>
            </div>
            <form class="modal-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="regFirstName">First Name</label>
                        <input type="text" id="regFirstName" required>
                    </div>
                    <div class="form-group">
                        <label for="regLastName">Last Name</label>
                        <input type="text" id="regLastName" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="regEmail">Email</label>
                    <input type="email" id="regEmail" required>
                </div>
                <div class="form-group">
                    <label for="regPassword">Password</label>
                    <input type="password" id="regPassword" required>
                </div>
                <div class="form-group">
                    <label for="regPhone">Phone</label>
                    <input type="tel" id="regPhone" required>
                </div>
                <button type="submit" class="modal-btn">Register</button>
            </form>
        </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script>
        window.isAuthenticated = @User.Identity.IsAuthenticated.ToString().ToLower();
    </script>
    <script src="./js/main.js"></script>
</body>
</html>